{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": [
      "ES6",
      "es2017",
      "ES7",
      "DOM"
    ],
    "allowJs": true,
    "outDir": "./dist",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react"
  },
  "include": [
    "src"
  ]
}
